public class Menuscreen extends MyScreen {
    Rectangle start;

    public Menuscreen(SpriteBatch spriteBatch) {
        super(spriteBatch);
        start = new Rectangle(65, 350, 145, 50);
    }

    @Override
    public void render(Input input) {
        processInput(input);
        draw();
    }

    private void processInput(Input input) {
        if(pointInRectangle(start, input.TOUCH.x, input.TOUCH.y)){
            //start game with screenManager
            System.out.println("Game will start...soon");
        }
    }

    //doesnt b worth to create a render class for the menu
    private void draw() {
        batch.begin();
        batch.draw(Assets.menu_bg, 0, 0);
        batch.draw(Assets.menu_button, start.x, start.y, start.getWidth(), start.getHeight());
        batch.end();
    }

