public class LevelScreen extends MyScreen {
    List<Rectangle> levelIcons = new ArrayList<Rectangle>();
    public static double[][] rect;

    public LevelScreen(SpriteBatch spriteBatch, ScreenManager screenManager) {
        super(spriteBatch, screenManager);

        int x = 50;
        int y = 50;

        int blockWidth = 50;

        for ( int row = 0;  row < 3;  row++ ) {
            for ( int col = 0;  col < 4;  col++ ) {
                x = 180*col + 100;
                y = 100*row + 120;

                levelIcons.add(new Rectangle(x, y, blockWidth, blockWidth));
            }
        }
    }

    @Override
    public void render(Input input) {
        processInput(input);
        draw();
    }

    private void draw() {
        batch.begin();
        for (Rectangle levelIcon : levelIcons) {
            batch.draw(Assets.level1, levelIcon.x, levelIcon.y, levelIcon.getWidth(), levelIcon.getHeight());
        }
        batch.end();
    }

    private void processInput(Input input) {
        // check which level is pressed
        // clicked
        // manager.changeScreen("TO GAMESCREEN");
        if(pointInRectangle(levelIcons.get(8), input.TOUCH.x, input.TOUCH.y)){
            screenManager.changeTo("GameScreen");
        }
    }

