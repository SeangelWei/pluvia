package utils;

import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import model.World;

public class WorldRenderer {
    SpriteBatch batch;

    public WorldRenderer(SpriteBatch batch) {
        this.batch = batch;
    }

    public void render(World world){
        batch.begin();
        batch.draw(Assets.player, world.getPlayer().position.x, world.getPlayer().position.y);
        batch.end();
    }
}