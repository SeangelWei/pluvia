package model;

import utils.Assets;
import utils.GameObject;
import utils.Pluvia;

public class Shot extends GameObject {
    int speed;

    public Shot(float x, float y) {
        super(x, y-380);
        speed = 300;
        bounds.setWidth(Assets.shot.getWidth());
        bounds.setHeight(Assets.shot.getHeight());
    }

    @Override
    public void update() {
        position.y += Pluvia.delta*speed;
    }
}
